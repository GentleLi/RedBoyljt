<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="#E01B1B"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/back_detail"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/tab_title_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:text="商品详情"
            android:textSize="25sp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/back_detail"
            android:layout_centerVertical="true"
            android:text="BACK"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#F8E098"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/im_detail"
            android:layout_width="180sp"
            android:layout_height="130sp"
            android:layout_centerInParent="true"
            android:background="@drawable/about" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A3D2A3"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/text_name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_mactprice_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="市场价:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/text_huiyuan_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="会员价:"
            android:textColor="#FF0000"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量:"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edit_num_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:hint="请输入购买数量"
                android:textSize="18dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_addcar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#EDEEF4"
                android:layout_weight="1"
                android:background="@drawable/car_xml"
                android:text="加入购物车" />

            <Button
                android:id="@+id/button_addsoucang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="加入收藏" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/text_cangku"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="XX仓库:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/text_comment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="用户评论::"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>