<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!--
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:button="@null"
            android:drawablePadding="-12dp"
            android:gravity="center"
            android:textColor="@color/tab_text_bg" 
            android:layout_weight="1"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:button="@null"
            android:drawablePadding="-12dp"
            android:gravity="center"
            android:textColor="@color/tab_text_bg" 
            android:layout_weight="1"
    -->
    <style name="TabTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/tab_bg_shape</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">@dimen/rb_drawable_top_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tab_text_bg</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- 线性布局的属性 -->



    <style name="LLTheme">
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:background">@drawable/shape_corners</item>
    </style>

</resources>